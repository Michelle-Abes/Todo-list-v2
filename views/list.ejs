<%- include('header'); -%>
    <div class="box" id="heading">
        <h1> <%= ListTitle %> </h1>
    </div>
    
    <div class="box" >
      <form action="/delete" method="post">
        <% newListItems.forEach( item => { %>    
            <div class="item">
              <input type="checkbox" onChange="this.form.submit()" name="checkbox" value="<%= item._id %>">
              <p><%=  item.name  %></p>
            </div>
            <input type="hidden" name="hiddenListName" value="<%= ListTitle %>" ></input>
        <% }) %>
      </form>

        <form class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="Add Items" autocomplete="off">
            <button type="submit" name="submit" value=<%= ListTitle %>>+</button>
        </form>
    </div>

<%- include('footer'); -%>   

